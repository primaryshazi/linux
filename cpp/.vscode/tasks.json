{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++",
            "command": "/usr/local/shazi/gcc/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "${workspaceRoot}/*.cpp",
                "-o",
                "${workspaceRoot}/build/main",
                "-std=c++17",
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}
