{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",
                "${workspaceRoot}/*.c",
                "-o",
                "${workspaceRoot}/build/main",
                "-std=c17",
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
